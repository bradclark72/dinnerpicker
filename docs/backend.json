{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the user was created."
        },
        "spinsRemaining": {
          "type": "number",
          "description": "Number of free restaurant searches remaining."
        },
        "membership": {
          "type": "string",
          "description": "The user's membership level.",
          "enum": ["free", "monthly", "lifetime"]
        }
      },
      "required": ["uid", "email", "createdAt", "spinsRemaining", "membership"]
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    }
  }
}
